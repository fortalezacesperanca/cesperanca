{
  "name": "cesperanca",
  "private": true,
  "version": "0.2.1",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development VITE_TARGET=dev vite",
    "build:firebase": "tsc -b && cross-env NODE_ENV=production VITE_TARGET=firebase vite build",
    "build:github": "tsc -b && cross-env NODE_ENV=production VITE_TARGET=github vite build",
    "lint": "eslint .",
    "preview": "npm run build:github && vite preview",
    "emulate": "npm run build:firebase && firebase emulators:start --only hosting",
    "dev:types": "npx chakra typegen ./src/view/theme/index.ts",
    "release": "release-it --ci",
    "analyze": "npx vite-bundle-visualizer -o ./temp/index.html"
  },
  "dependencies": {
    "@chakra-ui/cli": "^3.30.0",
    "@chakra-ui/react": "^3.30.0",
    "@emotion/react": "^11.14.0",
    "@release-it/conventional-changelog": "^10.0.4",
    "axios": "^1.13.2",
    "cross-env": "^10.1.0",
    "firebase": "^12.7.0",
    "firebase-tools": "^15.2.1",
    "i18next": "^25.7.3",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.0",
    "react-icons": "^5.5.0",
    "react-router": "^7.11.0",
    "react-router-dom": "^7.11.0",
    "react-slick": "^0.31.0",
    "release-it": "^19.2.3",
    "serve": "^14.2.5",
    "slick-carousel": "^1.8.1",
    "vite-tsconfig-paths": "^6.0.3",
    "zod": "^4.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
